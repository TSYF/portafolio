{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "../back-end"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "lib": [ "ESNext" ],
    "composite": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@img/*": ["./src/assets/img/*"],
      "@views/*": ["./src/views/*"],
      "@router/*": ["./src/router/*"],
      "@stores/*": ["./src/stores/*"],
    }
  }
}
